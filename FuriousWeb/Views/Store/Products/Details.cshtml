        <div class="row">

            <div class="col-sm-12 padding-right">
                <div class="row">
                    <div class="product-details">
                        <!--product-details-->
                        <div class="col-sm-5">
                            <div class="view-product">
                                @{
                                    var image = "";
                                    if (Model.Product.Images.FirstOrDefault() == null)
                                    {
                                        image = @Url.Content("~/Content/Images/Products/no-image.png");
                                    }
                                    else
                                    {
                                        image = @Url.Content(Model.Product.Images.FirstOrDefault().RelativePath);
                                    }
                                }

                                <img src="@image" alt="" />
                                @*if (Model.ProductMainImage != null)
                                {
                                    <img src="@Url.Content(Model.ProductMainImage.RelativePath)" alt="" />
                                }*@
                            </div>
                            <div id="similar-product" class="carousel slide" data-ride="carousel">

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner">

                                    <div class="item active">
                                        @for (int i = 0; i < Model.ProductSecondaryImages.Count && i < 3; i++)
                                        {
                                            <a href=""><img src="@Url.Content(Model.ProductSecondaryImages[i].RelativePath)" alt=""></a>
                                        }
                                    </div>
                                    <div class="item">
                                        @if (Model.ProductSecondaryImages.Count > 3)
                                        {
                                            for (int i = 3; i < Model.ProductSecondaryImages.Count; i++)
                                            {
                                                <a href=""><img src="@Url.Content(Model.ProductSecondaryImages[i].RelativePath)" alt=""></a>
                                            }
                                        }
                                    </div>
                                    
                                </div>

                                <!-- Controls -->
                                <a class="left item-control" href="#similar-product" data-slide="prev">
                                    <i class="fa fa-angle-left"></i>
                                </a>
                                <a class="right item-control" href="#similar-product" data-slide="next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>

                        </div>
                        <div class="col-sm-7">
                            <div class="product-information">
                                <!--/product-information-->
                                <h2>@Model.Product.Name</h2>
                                <p>Prekės ID: @Model.Product.Id</p>
                                <span>
                                    <span>€ @Model.Product.Price</span>
                                    <label>Kiekis:</label>
                                    <input type="text" value="1" />
                                    <button type="button" class="btn btn-fefault cart" onclick="onBtnAddToCartClick(this, @Model.Product.Id, false)">
                                        <i class="fa fa-shopping-cart"></i>
                                        Įdėti į krėpšelį
                                    </button>
                                </span>
                                <!--<p><b>Prekė sandelyje</b></p>
                                <p><b>Gamintojas:</b> E-SHOPPER</p>-->
                            </div><!--/product-information-->
                        </div>
                    </div><!--/product-details-->
                </div>

                <div class="category-tab shop-details-tab">
                    <!--category-tab-->
                    <div class="col-sm-12">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#details" data-toggle="tab">Aprašymas</a></li>
