<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="logo pull-left">
                <a href="index.html"><img src="~/Content/Images/logo.png" alt="" /></a>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="shop-menu pull-right">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home", routeValues: null)">
