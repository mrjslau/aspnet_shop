@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            getProducts("", false, 1, true);

            setTimeout(function () {
                
                var count = getProductsCount('');
                pages = Math.ceil(count / 12);
                $('.products-pagination').append('<li class="active" data-value="1">' + 1 + '</li>');
                for (i = 1; i < pages; i++) {
                    $('.products-pagination').append('<li data-value="' + (i + 1) + '">' + (i + 1) + '</li>');
                }
            }, 100);

            $('body').on('click', '.products-pagination li', function () {
                var page = $(this).data('value');
                getProducts($("#user-product-search").val(), false, page, true);
            });

            
        });
    </script>
}