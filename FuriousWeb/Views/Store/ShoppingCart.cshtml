                                    <h4><a href="">@cartItem.Product.Name</a></h4>
                                    <p>Prekės ID: @cartItem.Product.Id</p>
                                </td>
                                <td class="cart_price">
                                    <p>@cartItem.Product.Price</p>
                                </td>
                                <td class="cart_quantity">
                                    <div class="cart_quantity_button">
                                        <a class="cart_quantity_up" href=""> + </a>
                                        <input class="cart_quantity_input" type="text" name="quantity" min="1" value=">@cartItem.Quantity" autocomplete="off" size="2" onchange="onProductQuantityChange(this)">
                                        <a class="cart_quantity_down" href=""> - </a>
                                    </div>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">$59</p>
                                </td>
                                <td class="cart_delete">
                                    <a class="cart_quantity_delete" href="@Url.Action("DeleteItem", "ShoppingCart", routeValues: new { productId = cartItem.Product.Id })"><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        }
                        <tr class="cart_count_total">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Iš viso:</td>
                            <td> 59 eur.</td>
                        </tr>
                    </tbody>
                </table>
                <div class="cart_actions">
                    <a href="@Url.Action("openCheckout", "Checkout")" class="btn form-buttons">Apmokėti</a>
                    <a href="#" class="btn form-buttons">Išvalyti krepšelį</a>
                </div>
            </div>
        </div>
    </section> <!--/#cart_items-->





