                        <tr class="cart_menu">
                            <td class="image">Prekė</td>
                            <td class="description"></td>
                            <td class="price">Kaina</td>
                            <td class="quantity">Kiekis</td>
                            <td class="total">Iš viso</td>
                            <td></td>
                        </tr>
                    </thead>
