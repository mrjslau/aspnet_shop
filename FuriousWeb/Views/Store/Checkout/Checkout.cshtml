@model FuriousWeb.Models.ViewModels.CheckoutViewModel

@{
    ViewBag.Title = "Checkout";
}

@if (Model.paymentErr != null)
{
    <!--Model.paymentErr.Message-->

    <div class="message">
        <p>Įvyko klaida bandant apmokėti, atsiprašome, bandykite dar kartą.</p>
    </div>
}

<form method="post" action="SubmitPayment" runat="server">
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="personal_info">
        <div class="title">
            Jūsų kontaktiniai duomenys
        </div>
        <div class="info">
            <div>
                <div>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Vardas*" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Pavardė*" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control", @placeholder = "El. pašto adresas*" })
                    @Html.TextBoxFor(m => m.User.Phone, new { @class = "form-control", @placeholder = "Telefono numeris*" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.User.Address, new { @class = "form-control", @placeholder = "Adresas*" })
                    @Html.HiddenFor(m => m.User.Id)
                </div>
            </div>
        </div>
    </div>
    

    <div class="billing_info">
        <div class="title">
            Įveskite kortelės duomenis
        </div>
        <div class="info">
            <div>
                <div>
                    @Html.TextBoxFor(m => m.Card_number, new { @class = "form-control", @placeholder = "Kortelės numeris*", @maxlength = "16" })
                    @*<input class="form-control" maxlength="16" type="text" id="card-number" name="card_number" placeholder="Kortelės numeris" required/>*@
                </div>
                <div>
                    @Html.TextBoxFor(m => m.Exp_year, new { @class = "form-control", @placeholder = "Galioja iki (metai)*", @min = "1900", @max = "10000" })
                    @Html.TextBoxFor(m => m.Exp_month, new { @class = "form-control", @placeholder = "Galioja iki (mėnesis)*", @min = "1", @max = "12" })
                    @*<input class="form-control" min="1900" max="10000" type="number" id="exp-year" name="exp_year" placeholder="Galioja iki (metai)" required/>
                    <input class="form-control" min="1" max="12" type="number" id="exp-month" name="exp_month" placeholder="Galioja iki (mėnesis)" required/>*@
                </div>
                <div>
                    @Html.TextBoxFor(m => m.Card_cvv, new { @class = "form-control", @placeholder = "Kortelės CVV kodas*", @maxlength = "3" })
                    @*<input class="form-control" maxlength="3" type="text" id="card-cvv" name="card_cvv" placeholder="Kortelės CVV kodas" required/>*@
                </div>
            </div>
        </div>
        <div class="do_action">
            <div>
                <button type="submit" id="pay-now" class="btn btn-primary add-to-cart">Apmokėti</button>
                <button type="reset" id="reset" class="btn btn-default add-to-cart">Valyti</button>
            </div>
        </div>
    </div>
</form>