<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <title>@ViewBag.Title - FuriousWeb</title>
    @Styles.Render("~/Content/Styles/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div id="page">
        <!--  MENU START -->
        <div id="header"> @* TODO: kodel 'id' vadinasi 'header' jeigu tai yra 'left-side-bar' ?*@
            <div class="logo-holder">
                <a href="#" class="logo">
                    <img src="~/Content/Images/logo.png" alt="">
                </a>
            </div>
            <div class="main-menu">
                <ul class="menu">
                    <li class="selected">
                        <a href="#"><i class="fa fa-shopping-basket"></i>Prekės</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-users"></i>Vartotojai</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-shopping-cart"></i>Užsakymai</a>
                    </li>
                </ul>
            </div>
        </div>
        <!--  MENU END -->

        <div class="right-side">
            <div class="top-bar">
                <div class="mobile-menu">
                    <a href="#" class="mobile-menu-toggler">
                        <i class="fa fa-bars"></i>
                        <i class="fa fa-times"></i>
                    </a>
                    <ul class="menu">
                        <li class="selected">
                            <a href="#"><i class="fa fa-shopping-basket"></i>Prekės</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-users"></i>Vartotojai</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-shopping-cart"></i>Užsakymai</a>
                        </li>
                    </ul>
                </div>

                @Html.Partial("_LoginPartial")
            </div>

            <div class="main-content">
                @RenderBody()
            </div>

            <!-- FOOTER -->
            <div class="footer">
                <div class="copy">
                    Visos teisės saugomos &copy; @DateTime.Now.Year
                </div>
                <div class="solution">
                    Sprendimas: <span>2Fast2Furious</span>
                </div>
            </div>
        </div>
    </div>

    <script src="~/libs/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/libs/fancybox/source/jquery.fancybox.pack.js" type="text/javascript"></script>
    <script src="~/libs/TurnWheel/jReject/js/jquery.reject.js" type="text/javascript"></script>
    <script src="~/libs/Swiper/dist/js/swiper.jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/modernizr.js" type="text/javascript"></script>
    <script src="~/Scripts/buildmobile.js" type="text/javascript"></script>
    <script src="~/Scripts/general.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
