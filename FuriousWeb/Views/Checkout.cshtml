    <div class="panel" id="payment-panel">
        <div class="panel-heading text-center">
            <h3>Įveskite kortelės duomenis</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <input class="form-control" maxlength="16" type="text" id="card-number" name="card_number" placeholder="Card number"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-xs-6 col-md-offset-4">
                    <input class="form-control" maxlength="4" type="number" id="exp-year" name="exp_year" placeholder="Expiration year" />
                </div>
                <div class="col-md-2 col-xs-6">
                    <input class="form-control" maxlength="2" type="number" id="exp-month" name="exp_month" placeholder="Expiration month" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <input class="form-control" maxlength="3" type="text" id="card-cvv" name="card_cvv" placeholder="Card CVV"/>
                </div>
            </div>
        </div>
        <div class="panel-footer text-right">
            <button type="submit" id="pay-now" class="btn-primary">Apmokėti</button>
        </div>
    </div>
</form>