@model FuriousWeb.Models.ViewModels.CreateDetailedProductViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Nauja prekė</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.AddToStock, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.AddToStock)
                @Html.ValidationMessageFor(m => m.AddToStock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.WarehouseCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.WarehouseCode, new SelectList(Model.WarehousesCodes), new { htmlAttributes = new { @class = "form-control" }, disabled = "disabled" })
                @Html.ValidationMessageFor(m => m.WarehouseCode, "", new { @class = "text-danger" })
            </div>
            @Html.HiddenFor(m => m.WarehouseCode)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Quantity, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <div class='form-actions'>
                    <input type="submit" value="Patvirtinti" class="btn btn-default" />
                    @Html.ActionLink("Atšaukti", "Index", "Home", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>

        @* kitaip sandeliu list'as neateis iki kontrolerio *@
        @for (int i = 0; i < Model.WarehousesCodes.Count; i++)
        {
            @Html.HiddenFor(m => m.WarehousesCodes[i]);
        }
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $("#AddToStock").click(function () {
            document.getElementById("Quantity").readOnly = !this.checked;
            document.getElementById("Price").readOnly = !this.checked;
            document.getElementById("WarehouseCode").disabled = !this.checked;
        });     
    </script>
}