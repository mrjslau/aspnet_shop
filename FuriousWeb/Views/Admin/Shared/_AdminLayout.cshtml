<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <title>@ViewBag.Title - FuriousWeb</title>
    @Styles.Render("~/Content/Styles/bootstrap.min.css")
    @Styles.Render("~/Content/Styles/font-awesome.min.css")
    @Styles.Render("~/Content/Styles/adminstyle.css")
    @Scripts.Render("~/Scripts/jquery/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/Design/bootstrap.min.js")
</head>

<body>
    <div>
        @Html.Partial("_AdminHeaderBarPartial")
    </div>

    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="index.html">Dashboard</a></li>
                <li class="active">Pages</li>
            </ol>
        </div>
    </section>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    
                    @Html.Partial("_AdminLeftSideBarPartial")

                </div>

                    <div class="col-md-9">
                        <div class="panel panel-default">
                            <div class="panel-heading main-color-bg">
                                <h3 class="panel-title">Apžvalga</h3>
                            </div>
                            <div class="panel-body">
                                <div class="col-md-4">
                                    <div class="well dash-box">
                                        <h2><span class="fa fa-users"></span> 4</h2>
                                        <h4>Vartotojai</h4>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="well dash-box">
                                        <h2><span class="fa fa-shopping-cart"></span> 103</h2>
                                        <h4>Prekės</h4>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="well dash-box">
                                        <h2><span class="fa fa-truck"></span> 15</h2>
                                        <h4>Užsakymai</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Latests users -->
                        <div class="panel panel-default">
                            <div class="panel-heading main-color-bg">
                                <h3 class="panel-title">Paskutiniai vartotojai</h3>
                            </div>
                            <div class="panel-body">
                                <table class="table table-striped table-hover">
                                    <tr>
                                        <th>Vardas</th>
                                        <th>El. paštas</th>
                                        <th>Prisijungė</th>
                                    </tr>
                                    <tr>
                                        <td>John</td>
                                        <td>john@as.com</td>
                                        <td>2012-12-12</td>
                                    </tr>
                                    <tr>
                                        <td>Johnas</td>
                                        <td>johnas@as.com</td>
                                        <td>2014-12-12</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        @RenderBody()
                    </div>
                </div>
            </div>
        </section>
        <div class="push"></div>
    </div>

    <footer id="admin-footer" class="text-muted">
        <div class="container text-center">
            <p>Visos teisės saugomos @DateTime.Now.Year ©</p>
            <div style="font-size: 1em;">Solution: <a href="#" title="Furious">2FastToFurious</a></div>
        </div>
    </footer>


