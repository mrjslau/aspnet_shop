@using Microsoft.AspNet.Identity

@{
    var shoppingCartItemsCount = Session["shoppingCartItemsCount"] != null ? Session["shoppingCartItemsCount"] : 0;
}

<div class="admin-head">
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Admin", null)">Admin</a>
            </div>

            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index"  || ViewContext.RouteData.Values["Action"].ToString() == "GetDashboardForAdmin" ? "active" : "")">
                        <a href="@Url.Action("Index", "Admin", null)">Admin panelė</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "GetProductsListForAdmin" ? "active" : "")">
                        <a href="@Url.Action("GetProductsListForAdmin", "Products", routeValues: new { isPartial = "false", query = "", currentPage = 1 })">Prekės</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "GetUsersListForAdmin" ? "active" : "")">
                        <a href="@Url.Action("GetUsersListForAdmin", "Admin", routeValues: new { isPartial = "false", query = "", currentPage = 1 })">Vartotojai</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "GetOrderListForAdmin" ? "active" : "")">
                        <a href="@Url.Action("GetOrderListForAdmin", "Admin", routeValues: new { isPartial = "false", query = "", currentPage = 1 })">Užsakymai</a>
                    </li>
                    <li style="padding-left: 20px;">
                        <a href="@Url.Action("Index", "Home", null)">Į parduotuvę</a>
                    </li>

                </ul>

                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                    @Html.AntiForgeryToken()
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Index", "Admin", null)">Sveiki, admin1</a></li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Atsijungti</a></li>
                    </ul>
                    }
                }
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <header id="admin-header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><span class="fa fa-cogs"></span> Admin panelė </h1>
                </div>
                <div class="col-md-2">
                    <div class="dropdown create">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Redaguoti
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="#">Pridėti prekę</a></li>
                            <li><a href="#">Blokuoti vartotoją</a></li>
                            <li><a href="#">Keisti užsakymą</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
</div>