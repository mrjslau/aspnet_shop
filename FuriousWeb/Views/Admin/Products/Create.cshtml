@model FuriousWeb.Models.ViewModels.CreateProductViewModel

@{
    ViewBag.Title = "Prekės sukurimas";
}


<h3>Nauja prekė</h3>

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { id = "createProductForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="error">@Html.ValidationMessage("Error")</div>
            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Code, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.TextAreaFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Price, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-6">
                        <input type='file' name="mainImage" onchange="loadMainImage(this)" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6 file_inputs">
                        <input type='file' name="images" onchange="loadImage(this)" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-6">
                        <div class='form-actions'>
                            <input type="submit" value="Patvirtinti" class="btn btn-default" />
                            @Html.ActionLink("Atšaukti", "Index", "Admin", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>

            </div> @* form-horizontal *@ 
        </div> @* col-md-6 *@

        <div class="col-md-6">
            <div class="prod-img-container"/>
        </div>

    </div> @*row*@
} @* end of form *@